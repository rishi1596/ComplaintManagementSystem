<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black1"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="8">

    <Button
        android:id="@+id/btn_id_register_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/customize_button"
        android:drawableStart="@drawable/whiteadd40"
        android:drawableLeft="@drawable/whiteadd40"
        android:drawableEnd="@drawable/whitearrow15"
        android:drawableRight="@drawable/whitearrow15"
        android:drawablePadding="5dp"
        android:text="@string/register_complaint"

        android:textAlignment="textStart"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_id_in_process_complaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/customize_button"
        android:drawableStart="@drawable/whiteinprocess40"
        android:drawableLeft="@drawable/whiteinprocess40"
        android:drawableEnd="@drawable/whitearrow15"
        android:drawableRight="@drawable/whitearrow15"
        android:drawablePadding="5dp"
        android:text="@string/in_process_complaints"
        android:textAlignment="textStart"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_id_view_all_complaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/customize_button"
        android:drawableStart="@drawable/whiteall40"
        android:drawableLeft="@drawable/whiteall40"
        android:drawableEnd="@drawable/whitearrow15"
        android:drawableRight="@drawable/whitearrow15"
        android:drawablePadding="5dp"
        android:text="@string/all_tickets"
        android:textAlignment="textStart"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_id_view_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/customize_button"
        android:drawableStart="@drawable/whiteabout40"
        android:drawableLeft="@drawable/whiteabout40"
        android:drawableEnd="@drawable/whitearrow15"
        android:drawableRight="@drawable/whitearrow15"
        android:drawablePadding="5dp"
        android:text="@string/about_us"
        android:textAlignment="textStart"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

    <!-- <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/settings"
         android:id="@+id/btn_id_view_settings"
         android:background="@drawable/customize_button"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginStart="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginEnd="8dp"
         android:drawableLeft="@drawable/whitesettings40"
         android:drawableStart="@drawable/whitesettings40"
         android:drawableRight="@drawable/whitearrow15"
         android:drawableEnd="@drawable/whitearrow15"
         android:textColor="@color/fontColor"
         android:textSize="16sp"
         android:layout_weight="1"
         android:textAlignment="textStart"
         android:layout_gravity="start"
         android:drawablePadding="5dp"
         /> -->
    <Button
        android:id="@+id/btn_id_view_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/customize_button"
        android:drawableStart="@drawable/whiteoffer40"
        android:drawableLeft="@drawable/whiteoffer40"
        android:drawableEnd="@drawable/whitearrow15"
        android:drawableRight="@drawable/whitearrow15"
        android:drawablePadding="5dp"
        android:text="@string/offers"
        android:textAlignment="textStart"
        android:textColor="@color/fontColor"
        android:textSize="16sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_id_app_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_dialog_email"
        app:backgroundTint="@color/fontColor" />

</LinearLayout>