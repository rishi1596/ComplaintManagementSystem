<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_relative"
    android:background="@drawable/splash"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bk_logo_resized"
        android:id="@+id/iv_id_bk_logo"

        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bk_name"
        android:layout_below="@+id/iv_id_bk_logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_id_bk_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_type"
        android:layout_below="@+id/iv_id_bk_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fontColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:id="@+id/tv_id_engineer"
        />
</RelativeLayout>